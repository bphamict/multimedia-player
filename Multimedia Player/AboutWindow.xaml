<Window x:Class="Multimedia_Player.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Multimedia_Player"
        mc:Ignorable="d"
        Title="About" Height="290" Width="300"
        ResizeMode="NoResize">
    <StackPanel Margin="20">
        <TextBlock FontSize="18">Copyright &#169; 2019</TextBlock>
        <TextBlock Margin="0 10 0 0">Author: Bao Pham - Cong Thanh</TextBlock>
        <TextBlock TextWrapping="Wrap">This project created for learning &amp; reference purposes. Thanks for using!</TextBlock>
        <GroupBox Margin="0 10 0 0">
            <GroupBox.Header>
                <TextBlock>Build information</TextBlock>
            </GroupBox.Header>
            <StackPanel>
                <TextBlock><Bold>Version:</Bold> 0.1</TextBlock>
                <TextBlock><Bold>Build date:</Bold> May 25, 2019</TextBlock>
                <TextBlock><Bold>Release date:</Bold> June 22, 2019</TextBlock>
            </StackPanel>
        </GroupBox>
        <Button Content="OK" Width="70" Height="20" Margin="0 20 0 0" Click="OK_Btn_Click" IsDefault="True"/>
    </StackPanel>
</Window>
